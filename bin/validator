#!/bin/bash -e

ROOT_DIR=$(realpath $(dirname $0)/..)

if [ $# != 3 ]; then
    echo $0 PROJECT_ID SITE_PATH PUBSUB_TOPIC
    false
fi

project_id=$1
site_path=$2
pubsub_topic=$3
shift
shift
shift

if [ ! -f $site_path/cloud_iot_config.json ]; then
    echo cloud_iot_config.json not found at $site_path
    false
fi

echo Building validator...
validator/bin/build > /dev/null

echo Running tools version `git describe`

$ROOT_DIR/validator/bin/validate $project_id schema pubsub:$pubsub_topic $USER $site_path
